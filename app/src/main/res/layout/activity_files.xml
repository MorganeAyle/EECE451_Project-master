<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morgane.eece451_project.Files">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/gradient"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="71dp">

        <Button
            android:id="@+id/channel1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:onClick="TryConnectChannel1"
            android:text="Connect to channel 1" />

        <Button
            android:id="@+id/channel2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/channel1Button"
            android:layout_alignStart="@+id/channel1Button"
            android:layout_below="@+id/channel1Button"
            android:layout_marginTop="65dp"
            android:onClick="TryConnectChannel2"
            android:text="Connect to channel 2" />

        <Button
            android:id="@+id/channel3Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/channel2Button"
            android:layout_alignStart="@+id/channel2Button"
            android:layout_below="@+id/channel2Button"
            android:layout_marginTop="76dp"
            android:onClick="TryConnectChannel3"
            android:text="Connect to channel 3" />

        />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
